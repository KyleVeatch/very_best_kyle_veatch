<!-- Validation failure messages -->
<% if @very_best_dishes_bookmark.errors.any? %>
  <% @very_best_dishes_bookmark.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Very Best Dishes Bookmark</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_very_best_dishes_bookmark" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for dish_id -->
      <div class="form-group">
        <label for="dish_id" class="control-label">
          Dish
        </label>

        <input type="text" id="dish_id" name="dish_id" placeholder="Dish" class="form-control" value="<%= @very_best_dishes_bookmark.dish_id %>">
      </div>

      <!-- Label and input for cuisine_id -->
      <div class="form-group">
        <label for="cuisine_id" class="control-label">
          Cuisine
        </label>

        <input type="text" id="cuisine_id" name="cuisine_id" placeholder="Cuisine" class="form-control" value="<%= @very_best_dishes_bookmark.cuisine_id %>">
      </div>

      <!-- Label and input for restaurant_id -->
      <div class="form-group">
        <label for="restaurant_id" class="control-label">
          Restaurant
        </label>

        <input type="text" id="restaurant_id" name="restaurant_id" placeholder="Restaurant" class="form-control" value="<%= @very_best_dishes_bookmark.restaurant_id %>">
      </div>

      <button class="btn btn-success">
        Create Very Best Dishes Bookmark
      </button>
      or
      <a href="/very_best_dishes_bookmarks">Cancel</a>
    </form>
  </div>
</div>
